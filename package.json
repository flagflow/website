{
	"name": "flagflow",
	"version": "1.0.1",
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"preview-static": "npx serve build",
		"sync": "svelte-kit sync",
		"ts:check": "node --run sync && svelte-check --tsconfig ./tsconfig.json",
		"format:check": "prettier --check .",
		"format:fix": "prettier --write . | grep -v 'unchanged' | sed G",
		"lint:check": "eslint .",
		"lint:fix": "eslint --fix .",
		"knip:check": "knip --reporter compact --strict",
		"all": "node --run format:fix && node --run lint:fix && node --run format:fix && node --run ts:check && node --run build",
		"npm:reinstall": "rm -rf ./node_modules && rm -f ./package-lock.json && npm i && npm i",
		"docker:build": "docker build --force-rm -t erp:$npm_package_version .",
		"docker:run": "docker run --rm --env-file .env --name erp --network=host erp:$npm_package_version",
		"docker:run:migrate": "docker run --rm --env-file .env --name erp --network=host erp:$npm_package_version node --run db:migrate",
		"docker:it": "docker run -it --rm --env-file .env --name erp erp:$npm_package_version /bin/bash",
		"docker:testdb:clone": "docker exec -it postgres psql -U postgres -d erp -c \"CREATE DATABASE erp_test WITH TEMPLATE erp\"",
		"docker:testdb:drop": "docker exec -it postgres psql -U postgres -d erp -c \"DROP DATABASE IF EXISTS erp_test\"",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:bench": "vitest bench"
	},
	"devDependencies": {
		"@iconify/svelte": "^5.0.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.26.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/postcss": "^4.1.11",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/svelte": "^5.2.8",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.1.0",
		"@typescript-eslint/eslint-plugin": "^8.38.0",
		"@typescript-eslint/parser": "^8.38.0",
		"@vitest/eslint-plugin": "^1.3.4",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.11.0",
		"eslint-plugin-unicorn": "^60.0.0",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.10.21",
		"globals": "^16.3.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"serve": "^14.2.4",
		"svelte": "^5.37.1",
		"svelte-check": "^4.3.0",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"vite": "^7.0.6",
		"vite-plugin-circular-dependency": "^0.5.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"clsx": "^2.1.1",
		"marked": "^16.1.1",
		"svelte-persisted-store": "^0.12.0",
		"tsx": "^4.20.3"
	}
}
