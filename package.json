{
	"name": "flagflow",
	"version": "1.7.0",
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"preview:static": "npx serve docs",
		"sync": "svelte-kit sync",
		"ts:check": "node --run sync && svelte-check --tsconfig ./tsconfig.json",
		"format:check": "prettier --check .",
		"format:fix": "prettier --write . | grep -v 'unchanged' | sed G",
		"lint:check": "eslint .",
		"lint:fix": "eslint --fix .",
		"sitemap:generate": "tsx scripts/generateSitemap.ts",
		"all": "node --run format:fix && node --run lint:fix && node --run format:fix && node --run ts:check && node --run test && node --run sitemap:generate && node --run build",
		"npm:reinstall": "rm -rf ./node_modules && rm -f ./package-lock.json && npm i && npm i",
		"test": "vitest run",
		"test:ui": "vitest --ui"
	},
	"devDependencies": {
		"@iconify/svelte": "^5.0.2",
		"@sveltejs/adapter-static": "^3.0.9",
		"@sveltejs/kit": "^2.41.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"@tailwindcss/postcss": "^4.1.13",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/svelte": "^5.2.8",
		"@types/eslint": "^9.6.1",
		"@types/node": "^24.5.0",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"@vitest/eslint-plugin": "^1.3.12",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"clsx": "^2.1.1",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.12.3",
		"eslint-plugin-unicorn": "^61.0.2",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "1.13.8",
		"globals": "^16.4.0",
		"globby": "^14.1.0",
		"jsdom": "^27.0.0",
		"marked": "^16.3.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"serve": "^14.2.5",
		"svelte": "^5.38.10",
		"svelte-check": "^4.3.1",
		"svelte-persisted-store": "^0.12.0",
		"tailwindcss": "^4.1.13",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vite": "^7.1.5",
		"vite-imagetools": "^8.0.0",
		"vite-plugin-circular-dependency": "^0.5.0",
		"vitest": "^3.2.4"
	}
}
